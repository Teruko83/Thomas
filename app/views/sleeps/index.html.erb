<div class="back-close-nav">

<%= link_to baby_path(@baby) do %>
 <div>
 <img src="<%= image_path('back-arrow.svg') %>" alt="" style="width:25px; margin:25px"></div>
</div>
<% end %>


<h1>Sleep Sessions</h1>
<br>
<div class="container" style="margin-bottom: 45px;">

  <div class="range-slider">
    <span id="rs-bullet" class="rs-label">0</span>
    <input id="rs-range-line" class="rs-range" type="range" value="0" min="0" max="10" step="0.5">
  </div>

</div>
<div class="button-blue-large">Confirm</div>


<% @sleeps.each do |s| %>
<div class="log-row">
  <div><img src="<%= image_path('baby-bottle.svg') %>" alt="" style="width:30px"></div>
  <div><p><%= s[:sleep_type] %></p></div>
  <div><p><%= s[:sleep_time] %></p></div>
  <div><p><%= s[:start_date] %></p></div>
  <div><img src="<%= image_path('moon.svg') %>" alt="" style="width:15px"></div>
</div>
<hr>
<% end %>

<div class="down-arrow" style="margin-top: 25px"><img src="<%= image_path('down-arrow.svg') %>" alt=""></div>

<h1 style="text-align:center">Your Day</h1>

<script>
  var rangeSlider = document.getElementById("rs-range-line");
  var rangeBullet = document.getElementById("rs-bullet");

  rangeSlider.addEventListener("input", showSliderValue, false);

  function showSliderValue() {
    rangeBullet.innerHTML = rangeSlider.value;
    var bulletPosition = (rangeSlider.value /rangeSlider.max);

  }

</script>

