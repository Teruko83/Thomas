<div class="back-close-nav">
 <%= link_to baby_path(@baby) do %>
  <div>
  <img src="<%= image_path('back-arrow.svg') %>" alt="" style="width:25px; margin:25px"></div>
</div>
<% end %>

<h1>Diaper</h1>
<img src="<%= image_path('diaper.svg') %>" alt="" style="height:160px; display: block; margin-left: auto; margin-right: auto; margin-top: 30px; margin-bottom: 25px">
 <%= link_to new_baby_diaper_path(@baby) do %>
<div class="button-blue-large">Add an entry</div>
<% end %>
<br>

<hr>
<% @diapers.each do |d|  %>
<div class="log-row">
  <div><img src="<%= image_path('diaper.svg') %>" alt="" style="width:30px"></div>
  <div><p><%= d[:category] %></p></div>
   <div><p><%= d[:comment] %></p></div>
  <div><p><%= d[:start_date].in_time_zone("EST").strftime("%b %e, %H:%M") %></p></div>
  <img src="<%= image_path('close.svg')%>" style="width:10px" >
</div>
<hr>
<% end %>

</div>

