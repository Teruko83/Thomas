
<div class="container">

<h1><%= "User's profil" %></h1>

<h2>-------------  Your babies  -------------</h2>
<% if @babies.any?  %>
  <% @babies.each do |b|  %>
    <div>
      <div class="baby-info">
        <div><p>Name:</p></div> <div><p> <%=b.name%></p></div>
     </div>
      <div class="baby-info">
        <div><p>Birthdate:</p></div> <div><p> <%=b.birthdate %></p></div>
      </div>
    <div> <p> Shared access with:</p> </div>
      <% b.care_takings.each do |c|%>
      <%= c.email %>
      <%= c.name %>
      <%= link_to care_taking_path(c), method: :delete do %>
         <img src="<%= image_path('close.svg') %>" alt="" style="width:10px">
        <% end %>
      <% end %>

       </div>

    <%= simple_form_for [b, CareTaking.new], method: :post, url: baby_care_takings_path(b) do |f| %>
        <%= f.input(:email)%>
        <%= f.submit("Share Access", class: "button-yellow-small") %>
      <% end %>
  <% end %>
<% end %>
    </div>


